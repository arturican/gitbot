{
  "name": "fake-activity",
  "version": "1.0.0",
  "description": "Fake Activity Generator",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 0",
    "start": "NODE_ENV=production node ./index.js",
    "help": "NODE_ENV=production node ./index.js help",
    "daemon": "NODE_ENV=production pm2 start",
    "stop": "pm2 stop all && pm2 delete all",
    "restart": "pm2 restart all",
    "logs": "pm2 logs",
    "ps": "pm2 ps",
    "build": "rollup index.js --file index.bundle.js --format iife",
    "compile": "nexe -t $(cat .nvmrc) -i ./index.js -o ./gitbot",
    "assemble": "npm run clean && npm run build && npm run compile",
    "clean": "rimraf index.bundle.js gitbot *.log",
    "reset": "npm run clean && rimraf ecosystem.config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/devlato/fake-activity-generator.git"
  },
  "keywords": [
    "fake",
    "activity",
    "github"
  ],
  "author": "devlato <github@devlato.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/devlato/fake-activity-generator/issues"
  },
  "homepage": "https://github.com/devlato/fake-activity-generator#readme",
  "dependencies": {
    "pm2": "^3.2.4",
    "shelljs": "^0.8.3"
  },
  "devDependencies": {
    "nexe": "^2.0.0-rc.34",
    "rollup": "^1.1.0"
  }
}
